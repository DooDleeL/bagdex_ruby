<%= stylesheet_link_tag "imagesbag.css" %>

<head>
  
</head>
<body>
  <div class="title"> 
  <div class="titleText">
    <h1>Bagmons</h1>
  </div>
 <div class='buttonArea'>
    <%= link_to 'Adicionar Bagmon', new_bagmon_path %>
  </div>
  </div>


  <ul class="cards">
  <% @bagmons.each do |bagmon| %>
  <li>
    <a href="/bagmons/<%= bagmon.id %>" class="card">
      <img class="card__image" <%= image_tag bagmon.image, size: "250x250" %>
      <div class="card__overlay">
        <div class="card__header">
          <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>                     
          <img class="card__thumb" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSb5Qoi_84Mdt1CtwVAITWfEo0ahdfrmEJyvnbH2GI8qGvRMC1mOt4X-m6t4j8rNlqLOTw&usqp=CAU" alt="" />
          <div class="card__header-text">
            <h3 class="card__title"><%= bagmon.number %> - <%= bagmon.name %></h3>            
            <span class="card__status"><%= bagmon.created_at.strftime('%-d/%-m/%y: %H:%M %Z')%></span>
          </div>
        </div>
        <p class="card__description"><%= bagmon.type.name %></p>
      </div>
    </a>      
  </li>
  <% end %>    
</ul>

</body>
